<form>
  <div class="form-group">
    <label for="name">Name</label>
    <Input @type="text" class="form-control" @id="name" @value={{name}}/>
  </div>
  <div class="form-group">
    <label for="serialNumber">Serial Number</label>
    <Input @type="text" class="form-control" @id="serialNumber" @value={{serialNumber}} />
  </div>
  <div class="form-group">
    <label for="serialNumber">Type</label>
    <Input @type="text" class="form-control" @id="type" @value={{type}} />
  </div>
  <button {{action "addDevice" @model}} type="submit" class="btn btn-primary">Save</button>
  <LinkTo @route="employees" class="btn btn-light" role="button" aria-pressed="false">
    Cancel
  </LinkTo>
</form>